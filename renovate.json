{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "git-submodules": {
    "enabled": true
  },
  "minimumReleaseAge": "0 days",
  "extends": [
    "config:recommended",
    "config:best-practices",
    "security:openssf-scorecard",
    "helpers:pinGitHubActionDigests",
    ":rebaseStalePrs"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "matchDepNames": [
        "go"
      ],
      "matchDepTypes": [
        "golang"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": [
        "github.com/openmcp-project/*"
      ],
      "description": "Update all components from openmcp-project immediately",
      "rebaseWhen": "auto",
      "minimumReleaseAge": "0 days",
      "enabled": true
    },
    {
      "description": "Ignore version update for our own API",
      "matchManagers": [
        "gomod"
      ],
      "enabled": false,
      "matchPackageNames": [
        "github.com/openmcp-project/cluster-provider-gardener/api"
      ]
    }
  ],
  "allowedCommands": [
    "task generate"
  ],
  "postUpgradeTasks": {
    "commands": [
      "task generate"
    ],
    "fileFilters": [
      "/hack/external-apis/apis.yaml/"
    ]
  },
  "customManagers": [
    {
      "description": "Match for gardener in hack/external-apis/apis.yaml",
      "customType": "regex",
      "managerFilePatterns": [
        "/hack/external-apis/apis.yaml/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-.]+?)\\s.*base: .*\\/(?<currentValue>.+?)\\s.*vendor: .+?\\/(?<packageName>.+?)\\s"
      ]
    }
  ]
}
